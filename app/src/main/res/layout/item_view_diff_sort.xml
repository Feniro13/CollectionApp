<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_view_diff_sort_textview"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_button_circle_big" />

    <Button
        android:id="@+id/item_view_diff_sort_button"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:background="@android:color/transparent"
        android:text="@string/example"
        android:textColor="@color/main"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/item_view_diff_sort_textview"
        app:layout_constraintEnd_toEndOf="@+id/item_view_diff_sort_textview"
        app:layout_constraintStart_toStartOf="@+id/item_view_diff_sort_textview"
        app:layout_constraintTop_toTopOf="@+id/item_view_diff_sort_textview" />

</androidx.constraintlayout.widget.ConstraintLayout>