<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dialog_textView_choose"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="@string/Dialog_textView_choose"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Dialog_button_deletecol"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:text="@string/dialog_button_rename"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_textView_choose" />

    <Button
        android:id="@+id/dialog_button_deletecol"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginTop="96dp"
        android:text="@string/dialog_button_delete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_textView_choose" />

    <Button
        android:id="@+id/dialog_button_deletecol2"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginTop="48dp"
        android:text="@string/dialog_button_edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_textView_choose" />
</androidx.constraintlayout.widget.ConstraintLayout>