<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dialog_add_item_recyclerview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:rotationX="0"
        android:rotationY="0"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_add_item_button_add"
        app:layout_constraintVertical_bias="0.093"
        tools:listitem="@layout/item_add_item" />

    <ImageView
        android:id="@+id/dialog_add_item_button_add"
        android:layout_width="149dp"
        android:layout_height="97dp"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_button_circle_big"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/dialog_add_item_button_back"
        android:layout_width="149dp"
        android:layout_height="97dp"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_button_circle_big"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:textColor="@color/main"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_add_item_button_back"
        app:layout_constraintEnd_toEndOf="@+id/dialog_add_item_button_back"
        app:layout_constraintStart_toStartOf="@id/dialog_add_item_button_back"
        app:layout_constraintTop_toTopOf="@+id/dialog_add_item_button_back" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="35dp"
        android:text="@string/done"
        android:textColor="@color/main"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_add_item_button_add"
        app:layout_constraintEnd_toEndOf="@+id/dialog_add_item_button_add"
        app:layout_constraintStart_toStartOf="@+id/dialog_add_item_button_add"
        app:layout_constraintTop_toTopOf="@+id/dialog_add_item_button_add" />

</androidx.constraintlayout.widget.ConstraintLayout>